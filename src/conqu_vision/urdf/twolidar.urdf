<?xml version="1.0"?>
<robot name="rc_baseplate">
  <material name="blue">
    <color rgba="0 0 0.8 1" />
  </material>

  <material name="white">
    <color rgba="1 1 1 1" />
  </material>

  <link name="base_footprint">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.05 0.05 0.001" />
      </geometry>
    </visual>
  </link>

  <joint name="base_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <!-- 底盘本体 -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.53 0.55945 0.1" />
      </geometry>
      <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <box size="0.53 0.55945 0.1" />
      </geometry>
    </collision>
    <inertial>
      <mass value="20" />
      <inertia ixx="4.00538" ixy="0.0" ixz="0.0" iyy="4.00538" iyz="0.0" izz="0.51076" />
    </inertial>
  </link>

  <!-- 轮子 -->
  <link name="wheel_lf">
    <visual>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </visual>
  </link>
  <link name="wheel_rf">
    <visual>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </visual>
  </link>
  <link name="wheel_lb">
    <visual>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </visual>
  </link>
  <link name="wheel_rb">
    <visual>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </visual>
  </link>

  <!-- 轮子与底盘链接的关节 -->
  <joint name="base_to_wheel_lf" type="fixed">
    <parent link="base_link" />
    <child link="wheel_lf" />
    <origin xyz="-0.25 0.195 -0.025" rpy="0 1.57075 0" />
  </joint>

  <joint name="base_to_wheel_rf" type="fixed">
    <parent link="base_link" />
    <child link="wheel_rf" />
    <origin xyz="0.25 0.195 -0.025" rpy="0 -1.57075 0" />
  </joint>

  <joint name="base_to_wheel_lb" type="fixed">
    <parent link="base_link" />
    <child link="wheel_lb" />
    <origin xyz="-0.25 -0.195 -0.025" rpy="0 1.57075 0" />
  </joint>

  <joint name="base_to_wheel_rb" type="fixed">
    <parent link="base_link" />
    <child link="wheel_rb" />
    <origin xyz="0.25 -0.195 -0.025" rpy="0 -1.57075 0" />
  </joint>

  <!-- 雷达1 -->
  <link name="laser1">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.1" />
      </geometry>
    </visual>
  </link>
  <joint name="laser1_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.2797 0 0.1" />
    <parent link="base_link" />
    <child link="laser1" />
  </joint>

  <!-- 雷达2 -->
  <link name="laser2">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.1" />
      </geometry>
    </visual>
  </link>
  <joint name="laser2_joint" type="fixed">
    <origin rpy="0 0 3.1416" xyz="-0.2797 0.0 0.1" />
    <parent link="base_link" />
    <child link="laser2" />
  </joint>
</robot>
