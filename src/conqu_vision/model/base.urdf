<?xml version="1.0"?>
<robot name="rc_baseplate">
  <material name="blue">
    <color rgba="0 0 0.8 1" />
  </material>

  <material name="white">
    <color rgba="1 1 1 1" />
  </material>

  <!-- 底盘本体 -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.53 0.532 0.1" />
      </geometry>
      <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <box size="0.53 0.532 0.1" />
      </geometry>
    </collision>
    <inertial>
      <mass value="20" />
      <inertia ixx="4.00538" ixy="0.0" ixz="0.0" iyy="4.00538" iyz="0.0" izz="0.51076" />
    </inertial>
  </link>

  <!-- 激光雷达1（左） -->
  <link name="laser1_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.1" />
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.1" />
      </geometry>
    </collision>
  </link>
  <joint name="base_to_laser1" type="fixed">
    <origin xyz="0 -0.32 0.15" rpy="3.14159 0 1.5708" />
    <parent link="base_link" />
    <child link="laser1_link" />
  </joint>

  <gazebo reference="laser1_link">
    <sensor type="ray" name="head_hokuyo_sensor">
      <pose>0 0 0.10 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>12</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1081</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159265</min_angle>  <!-- -180° -->
            <max_angle>3.14159265</max_angle>   <!-- 180° -->
          </horizontal>
        </scan>
        <range>
          <min>0.03</min>
          <max>100.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>scan</topicName>
        <frameName>laser1_link</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin name="base_controller" filename="libgazebo_ros_planar_move.so">
    <commandTopic>cmd_vel</commandTopic>
    <cmdTimeout>-1.0</cmdTimeout>
    <robotBaseFrame>base_link</robotBaseFrame>
    <odometryTopic></odometryTopic>
    <odometryFrame></odometryFrame>
    <publishOdom>false</publishOdom>
    </plugin>
</gazebo>
</robot>