<?xml version="1.0"?>
<robot name="rc_baseplate">
  <material name="blue">
    <color rgba="0 0 0.8 1" />
  </material>

  <material name="white">
    <color rgba="1 1 1 1" />
  </material>

<link name="base_footprint">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0" />
    <geometry>
      <box size="0.05 0.05 0.001" />
    </geometry>
  </visual>
</link>

<joint name="base_joint" type="fixed">
  <origin xyz="0 0 0" rpy="0 0 0" />
  <parent link="base_footprint"/>
  <child link="base_link" />
</joint>

  <!-- 底盘本体 -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.53 0.532 0.1" />
      </geometry>
      <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <box size="0.53 0.532 0.1" />
      </geometry>
    </collision>
    <inertial>
      <mass value="20" />
      <inertia ixx="4.00538" ixy="0.0" ixz="0.0" iyy="4.00538" iyz="0.0" izz="0.51076" />
    </inertial>
  </link>

  <!-- 轮子 -->
  <link name="wheel_lf">
    <visual>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </collision>
  </link>
  <link name="wheel_rf">
    <visual>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </collision>
  </link>
  <link name="wheel_lb">
    <visual>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </collision>
  </link>
  <link name="wheel_rb">
    <visual>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.0409" radius="0.077" />
      </geometry>
      <material name="white" />
    </collision>
  </link>

  <!-- 轮子与底盘链接的关节 -->
  <joint name="base_to_wheel_lf" type="fixed">
    <parent link="base_link" />
    <child link="wheel_lf" />
    <origin xyz="-0.25 0.195 -0.025" rpy="0 1.57075 0" />
    
  </joint>
  <joint name="base_to_wheel_rf" type="fixed">
    <parent link="base_link" />
    <child link="wheel_rf" />
    <origin xyz="0.25 0.195 -0.025" rpy="0 -1.57075 0" />
    
  </joint>
  <joint name="base_to_wheel_lb" type="fixed">
    <parent link="base_link" />
    <child link="wheel_lb" />
    <origin xyz="-0.25 -0.195 -0.025" rpy="0 1.57075 0" />
  </joint>
  <joint name="base_to_wheel_rb" type="fixed">
    <parent link="base_link" />
    <child link="wheel_rb" />
    <origin xyz="0.25 -0.195 -0.025" rpy="0 -1.57075 0" />
    
  </joint>


  <!-- 激光雷达1（左） -->
  <link name="laser1_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.1" />
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.1" />
      </geometry>
    </collision>
  </link>
  <joint name="base_to_laser1" type="fixed">
    <origin xyz="0 0.279725 0" rpy="3.14159 0 1.5708" />
    <parent link="base_link" />
    <child link="laser1_link" />
  </joint>

  <!-- 激光雷达2（右） -->
  <link name="laser2_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.1" />
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.1" />
      </geometry>
    </collision>
  </link>
  <joint name="base_to_laser2" type="fixed">
    <origin xyz="0 -0.279725 0" rpy="3.14159 0 0" />
    <parent link="base_link" />
    <child link="laser2_link" />
  </joint>

  <gazebo reference="laser1_link">
    <sensor type="ray" name="head_hokuyo_sensor">
      <pose>0 0 0.10 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1081</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159265</min_angle>  <!-- -180° -->
            <max_angle>3.14159265</max_angle>   <!-- 180° -->
          </horizontal>
        </scan>
        <range>
          <min>0.03</min>
          <max>100.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>LeftLidar/scan1</topicName>
        <frameName>laser1_link</frameName>
      </plugin>
    </sensor>
  </gazebo>

    <gazebo reference="laser2_link">
    <sensor type="ray" name="head_hokuyo_sensor">
      <pose>0 0 0.10 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1081</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159265</min_angle>  <!-- -180° -->
            <max_angle>3.14159265</max_angle>   <!-- 180° -->
          </horizontal>
        </scan>
        <range>
          <min>0.03</min>
          <max>100.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>RightLidar/scan2</topicName>
        <frameName>laser2_link</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin name="base_controller" filename="libgazebo_ros_planar_move.so">
    <commandTopic>cmd_vel</commandTopic>
    <cmdTimeout>-1.0</cmdTimeout>
    <robotBaseFrame>base_footprint</robotBaseFrame>
    </plugin>
</gazebo>
</robot>